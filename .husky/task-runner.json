{
  "tasks": [
    {
      "name": "echo staged files",
      "pathMode": "absolute",
      "command": "echo",
      "args": [
        "${staged}"
      ]
    },
    {
      "name": "dotnet format",
      "group": "pre-commit",
      "command": "dotnet",
      "args": [
        "format",
        "--include",
        "${staged}"
      ],
      "include": [
        "**/*.cs",
        "**/*.csx"
      ]
    },
    {
      "name": "branch-name-linter",
      "command": "dotnet",
      "args": [
        "husky",
        "exec",
        ".husky/scripts/branch-name-linter.csx",
        "--args",
        "${args}"
      ]
    },
    {
      "name": "commit-message-linter",
      "command": "dotnet",
      "args": [
        "husky",
        "exec",
        ".husky/scripts/commit-message-linter.csx",
        "--args",
        "${args}"
      ]
    }
  ]
}