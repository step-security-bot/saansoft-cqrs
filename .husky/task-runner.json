{
   "tasks": [
      {
         "name": "echo staged files",
         "group": "pre-commit",
         "pathMode": "absolute",
         "command": "echo",
         "args": ["${staged}"]
      },
      {
         "name": "dotnet format",
         "group": "pre-commit",
         "command": "dotnet",
         "args": ["format", "--include", "${staged}"],
         "include": ["**/*.cs", "**/*.csx"]
      },
      {
         "name": "commit-message-linter",
         "command": "dotnet",
         "args": ["husky", "exec", ".husky/csx/commit-message-linter.csx", "--args", "${args}"]
      },
      {
         "name": "warning-check",
         "group": "pre-push",
         "command": "dotnet",
         "args": ["build", "/warnaserror"],
         "include": ["**/*.cs", "**/*.csx"]
      }
   ]
}
